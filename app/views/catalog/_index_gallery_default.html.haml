- doc = presenter(document)
- counter = document_counter_with_offset(document_counter)
- label = truncate(document.fetch(document_show_link_field(document), '[Missing Title]'), length: 75)
%div.panel.panel-default
  %div.panel-heading
    = render 'view_original', :document => doc, :context => 'Gallery Search'
  %div.panel-body
    .cover-image= render 'thumbnail_default', :document => document, :document_counter => document_counter
    %div.title
      = link_to_document document, :counter => counter, :label=> label
