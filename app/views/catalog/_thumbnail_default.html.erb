<%- if has_thumbnail?(document) && tn = render_thumbnail_tag(document, {}, :counter => document_counter_with_offset(document_counter)) %>
<div style="text-align: center; width: 100px;">
  <div class="document-thumbnail search-thumbnail">
    <%= tn %>
  <%= render 'view_original', :url => document.fetch('isShownAt_ssi', false) %>
  </div>
</div>
<%- end %>