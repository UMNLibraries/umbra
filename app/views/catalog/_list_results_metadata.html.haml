- document_presenter = presenter(document)
%div.list-results-metadata
  %span.document-counter
    =(document_counter + 1).to_s + "."
  %span.title
    = link_to document_presenter.display_title, document
  %h2.h4.creator.metadata-field= render_document_show_field_value document, :field => 'sourceResource_creator_ssi'
  %h4.metadata-field
    Keywords:
  %ol.list-unstyled.subjects
    - Array.wrap(document_presenter.document['keywords_ssim']).each do |subject_heading|
      %li
        %a.label.label-default{href: "#{url_for(action:'index')}/?q=#{subject_heading}&search_field=subject"}= subject_heading
  = render 'view_original', :document => document_presenter, :context => 'List Search'