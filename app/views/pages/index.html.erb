<p id="notice"><%= notice %></p>
<h1>Pages</h1>
<div class="table-responsive">
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Link title</th>
        <th>Link path</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><%= link_to page.title, page %></td>
          <td><%= raw page.link_title %></td>
          <td><%= page.link_path %></td>
          <td><%= link_to 'Edit', edit_page_path(page), :class => 'btn btn-info' %></td>
          <td><%= link_to 'Destroy', page, method: :delete, :class => 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Page', new_page_path, :class => 'btn btn-primary' %>
