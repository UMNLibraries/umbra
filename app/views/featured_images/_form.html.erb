<%= form_for(@featured_image) do |f| %>
  <% if @featured_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@featured_image.errors.count, "error") %> prohibited this Featured Image from being saved:</h2>

      <ul>
      <% @featured_image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="field">
      <% if @featured_image.uploaded_image.url.present? %>
          <p><%= image_tag(@featured_image.uploaded_image.url(:thumb_large), :class => "thumb thumb-large") %></p>
      <% end %>
      <div class="field">
        <%= f.file_field :uploaded_image %><br />
        <%= f.hidden_field :uploaded_image_cache %>
      </div>

      <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.label :record_id, "Record ID" %><br />
        <%= f.text_field :record_id %>
      </div>

      <div class="field">
        <%= f.label :published %><br />
        <%= f.check_box :published %>
      </div>

      <%= f.submit ( f.object.new_record? ? "Create Featured Image" : "Save Changes"), class: "btn btn-primary"  %>
      <% unless @featured_image.new_record? %>
        <%#= link_to 'Delete this Image', @featured_image, method: :delete, data: { confirm: 'Are you sure you want to delete this featured image? You cannot undo this action.' }, class:"btn btn-danger" %>
      <% end %>
    </div>
<% end %>
