<%= form_for(@flag) do |f| %>
  <% if @flag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flag.errors.count, "error") %> prohibited this Flag from being saved:</h2>

      <ul>
      <% @flag.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class="field">
      <div class="field">
        <%= f.label :on_text do %>On Text Link Title (Visbile On Hover)<% end %><br />
        <%= f.text_field :on_text %>
      </div><br />

      <div class="field">
        <%= f.label :off_text do %>Off Text Link Title (Visbile On Hover)<% end %><br />
        <%= f.text_field :off_text %>
      </div><br />

      <div class="field">
        <%= f.label :on_text_display do %>On Text Link Display<% end %><br />
        <%= f.text_field :on_text_display %>
      </div><br />

      <div class="field">
        <%= f.label :off_text_display do %>Off Text Link Display<% end %><br />
        <%= f.text_field :off_text_display %>
      </div><br />

      <div class="field">
        <%= f.label :on_css %><br />
        <%= f.text_field :on_css %>
      </div><br />

      <div class="field">
        <%= f.label :off_css %><br />
        <%= f.text_field :off_css %>
      </div><br />

      <div class="field">
        <%= f.label :search_filter_threshold do %>
          Hide From Search Flag Vote Threshold
        <% end %>
        <br />
        <%= f.text_field :search_filter_threshold %><br />
        (After this number of unique votes by different users on a give record, it will be filtered from all future search results.)
      </div><br />
      <div class="field">
        <%= f.label :published %><br />
        <%= f.check_box :published %>
      </div><br />

      <div class="field">
        <%= f.label :restrict_to_editors do %>Restrict Usage to Flag Editors<% end %><br />
        <%= f.check_box :restrict_to_editors %>
      </div><br />

      <%= f.submit ( f.object.new_record? ? "Create Flag" : "Save Changes"), class: "btn btn-primary"  %>
      <% unless @flag.new_record? %>
        <%#= link_to 'Delete this Flag', @flag, method: :delete, data: { confirm: 'Are you sure you want to delete this flag? You cannot undo this action.' }, class:"btn btn-danger" %>
      <% end %>
    </div>
<% end %>
