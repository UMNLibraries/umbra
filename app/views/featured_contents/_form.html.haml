%div.form-group.input-group
  = form_for(@featured_content) do |f|
    - if @featured_content.errors.any?
      %div#error_explanation
        %h2
          = pluralize(@featured_content.errors.count, "error")
          prohibited this Featured Content Preview Image from being saved:
        %ul
          - @featured_content.errors.full_messages.each do |message|
            %li
              = full_messages
    %div.actions
      %p
        %div.field
          = succeed ':' do
            = f.label :title, class: 'control-label'
          %br
          = f.text_field :title, class: 'form-control'
      %p
        %div.field
          = succeed ':' do
            = f.label :preview_image, class: 'control-label'
          = f.file_field :preview_image
          = f.hidden_field :preview_image_cache
      %p
        %div.field
          = succeed ':' do
            = f.label :url, class: 'control-label'
          %br
          = f.text_field :url, class: 'form-control'
      %p
        %dif.field
          = succeed ':' do
            = f.label :is_news, class: 'control-label'
          = f.check_box :is_news
      %p
        %dif.field
          = succeed ':' do
            = f.label :published, class: 'control-label'
          = f.check_box :published
      %p
        = f.submit ( f.object.new_record? ? "Create Featured Content" : "Save Changes"), class: "btn btn-primary"
        - unless f.object.new_record?
          = link_to 'Delete', @featured_content, method: :delete, data: { confirm: 'Are you sure you want to delete this featured content? You cannot undo this action.' }, class:"btn btn-danger"