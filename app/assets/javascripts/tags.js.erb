 $(function() {
    var availableTags = [
      "Antebellum",
      "Black Arts Movement",
      "Black Journalism",
      "Civil Rights",
      "Civil War",
      "Diaspora",
      "Government and Politics",
      "Great Migration",
      "Harlem Renaissance",
      "Jim Crow",
      "Music",
      "Theater"
    ];
    function split( val ) {
      return val.split( /,\s*/ );
    }
    function extractLast( term ) {
      return split( term ).pop();
    }
    $('#documents .record-tag').each( function( index, element ) {
      $(this).find("[type=text]")
        .bind("focus", function( event ) {
          $(this).autocomplete('search');
        })
        .autocomplete({
          minLength: 0,
          source: function( request, response ) {
            // delegate back to autocomplete, but extract the last term
            response( $.ui.autocomplete.filter(
              availableTags, extractLast( request.term ) ) );
          },
          select: function( event, ui ) {
            var terms = split( this.value );
            // remove the current input
            terms.pop();
            // add the selected item
            terms.push( ui.item.value );
            // add placeholder to get the comma-and-space at the end
            terms.push( "" );
            this.value = terms.join( ", " );
            return false;
          }
        })
        // don't navigate away from the field on tab when selecting an item
        .bind("keydown", function( event ) {
          if (event.keyCode === $.ui.keyCode.TAB && $(this).autocomplete( "instance" ).menu.active ) {
            event.preventDefault();
          }
        })
        .bind("focusout", function( event ) {
          $(this).parent().parent().find("[type=submit]").submit();
        })
        .bind('keypress', function(e) {
          var code = e.keyCode || e.which;
          if (code == 13) {
            $(this).parent().parent().find(".saved").fadeIn(100).fadeOut(100).fadeIn(100).fadeOut(1500);
            $(this).parent().parent().find("[type=submit]").submit();
          }
        });
      });
});


// Ensure our tags are fully saved before navigating away from the page
$( window ).unload(function() {
  $('#documents .record-tag').each( function( index, element ) {
    $(this).find("[type=submit]").submit();
    event.preventDefault();
  });
});